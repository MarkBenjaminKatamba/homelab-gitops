apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
nameSuffix: -{{ENV}}
resources:
- ../../../bases/{{APP_NAME}}
replicas:
- count: 1
  name: {{APP_NAME}}-{{ENV}}
patches:
- patch: |-
    - op: replace
      path: /spec/template/metadata/labels/app.kubernetes.io~1name
      value: {{APP_NAME}}-{{ENV}}
    - op: replace
      path: /spec/selector/matchLabels/app.kubernetes.io~1name
      value: {{APP_NAME}}-{{ENV}}
  target:
    group: apps
    kind: Deployment
    name: {{APP_NAME}}
    version: v1
- patch: |-
    - op: replace
      path: /spec/selector/app.kubernetes.io~1name
      value: {{APP_NAME}}-{{ENV}}
  target:
    kind: Service
    name: {{APP_NAME}}
    version: v1
- path: version.yaml


